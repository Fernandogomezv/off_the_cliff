<h2>Login</h2>

<div class="container container-login my-auto">
  <div class="row">
    <div class="img-logo-login col-12 center-block d-block mx-auto"></div>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "Log in", class:"button-shadow", id:"submit-btn-register"%>
      </div>
    <% end %>
  </div>
</div>
