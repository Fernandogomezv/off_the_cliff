<h1>Trails</h1>

<div class="container">
<% @trails.each do |trail| %>
<div class="card-container-main">
  <div class="card-container-inner">
    <div class="card-title"><h1><%= link_to trail.name, trail_path(trail), class: "link-title-trail-index" %></h1></div>
    <div class="card-description"><p class="card-description-text"><%= trail.description %></p></div>
    <div class="card-information">
      <div class="card-information-time">
        <i class="fa-solid fa-clock fontawe-links"></i>
          <p class="card-description-text"><%= (trail.duration / 60) %> Minutes</p>
      </div>
      <div class="card-information-time">
        <i class="fa-solid fa-person-walking fontawe-links"></i>
          <p class="card-description-text"><%= trail.distance %>Km</p>
      </div>
    </div>
  </div>
</div>
<% end %>
</div>

<div class="container">
<% @pins.each do |pin| %>
<div class="card-container-pin-main">
  <div class="card-container-pin-inner">
    <div class="card-title"><h1><%= "pin #" %></h1></div>
    <div class="card-description"><p class="card-description-text"><%= pin.description %></p></div>
    <div><p class="card-pin-question"><%= "Was this correct?" %></p></div>
    <div class="choose-answer">
    <div class="answer no"> <i class="fa-solid fa-xmark"></i></div>
  <div class="answer yes" > <i class="fa-solid fa-check"></i> </div>

</div>
  </div>

</div>
<% end %>
</div>
