<script src="https://kit.fontawesome.com/6eb7b1a5cb.js" crossorigin="anonymous"></script>

<h1><%= @trail.name %></h1>

<h2><%= @trail.location %></h2>

<div>
<p><strong>Distance:</strong> <%= @trail.distance %> km</p>
<p><strong>Duration:</strong> <%= @trail.duration %> seconds</p>
<p><strong>Elevation:</strong> <%= @trail.elevation %> meters</p>
<p><strong>Difficulty:</strong> <%= @trail.difficulty %></p>
<p><strong>Description:</strong> <%= @trail.description %></p>

<%= link_to "trails", trails_path %>

<i class="fa-solid fa-location-dot"></i>

<div style="width: 100%; height: 600px;"
  data-controller="mapbox"
  data-mapbox-points-value="<%= @points.to_json %>"
  data-mapbox-pins-value="<%= @pins.to_json %>"
  data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
</div>
