<script src="https://kit.fontawesome.com/6eb7b1a5cb.js" crossorigin="anonymous"></script>
  <div class="container-title-header">
    <div  id="trail-name"> <h1 class="title-header"><%= @trail.name %></h1> </div>
  </div>

  <div style="width: 100%; height: 550px;"
  data-controller="mapbox"
  data-mapbox-points-value="<%= @points.to_json %>"
  data-mapbox-pins-value="<%= @pins.to_json %>"
  data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
</div>

<div class="container">
  <div class="container-button-show row">
    <div class="col-4 text-center">
      <%= link_to "Back to trails", trails_path, class:"btn btn-outline-primary form-control" %>
    </div>
    <div class="col-4 text-center">
      <%= simple_form_for [ @trail, @favorite ] do |f| %>
        <%= f.submit "Favorite", class: "btn btn-outline-primary form-control" %>
      <% end %>
    </div>
    <div class="col-4 text-center">
      <%= simple_form_for [ @trail, @hike ] do |f| %>
        <%= f.submit "Hike", class: "btn btn-outline-primary  form-control" %>
      <% end %>
    </div>
  </div>
</div>

<div class="trail-show-card-container">
  <div class="info">
    <h2 class="location-info"><%= @trail.location %></h2>
    <p><strong>Distance:</strong> <%= @trail.distance %> km</p>
    <p><strong>Duration:</strong> <%= (@trail.duration / 60) %> minutes</p>
    <p><strong>Elevation:</strong> <%= @trail.elevation %> meters</p>
    <p><strong>Difficulty:</strong> <%= @trail.difficulty %></p>
    <p><strong>Description:</strong> <%= @trail.description %></p>
  </div>
</div>
