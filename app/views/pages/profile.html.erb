<div class="profile-container">
  <div class="profile-container-main-picture" style="background-image: url('<%= @user.photo.url %>')">
    <div class="card-title card-profile-name"><h1><%= @user.first_name %></h1></div>
  </div>
</div>

<div class="level-container d-flex">
  <div class="level-text">
  <h1>Level:</h1>
  </div>
  <div class="level-icons">
    <i class="fa-solid fa-mountain" style="color: orange"></i>
    <i class="fa-solid fa-mountain" style="color: orange"></i>
    <i class="fa-solid fa-mountain" style="color: #4a695d"></i>
  </div>
</div>

<div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <h1>In 2022 you have walked</h1>
      <h1>4200 Km</h1>
    </div>
    <div class="carousel-item">
      <h1>Elevated a total of</h1>
      <h1>4390 M</h1>
    </div>
    <div class="carousel-item">
      <h1>And confirmed</h1>
      <h1>3942 pins</h1>
    </div>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>
